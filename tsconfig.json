{
  "compilerOptions": {
    "target": "esnext",
    "allowJs": false,
    "jsx": "react",
    "baseUrl": "./",
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": [
      "es6",
      "dom",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "./src/**/*",
    "./.storybook/**/*"
  ],
  "exclude": [
    "node_modules",
    "typings/browser.d.ts",
    "typings/browser/**"
  ]
}
